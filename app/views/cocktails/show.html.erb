<h1><%= @cocktail.name %></h1>

<% @cocktail.ingredients.each do |ingredient| %>
  <p><%= ingredient.name %></p>
<% end %>

<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %><%= link_to "Delete", cocktail_dose_path(@cocktail, dose), method: :delete %></p>
<% end %>

<%= link_to "Back to list", cocktails_path %>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
